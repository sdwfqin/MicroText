<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_items_title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题标题"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/home_items_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:lines="1"
                android:ellipsize="end"
                android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/home_items_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="张三"/>

                <TextView
                    android:id="@+id/home_items_author_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/home_items_author"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/home_items_author"
                    android:paddingLeft="20dp"
                    android:text="@string/items_author_text"/>

                <TextView
                    android:id="@+id/home_items_read_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/home_items_author_text"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/home_items_author_text"
                    android:text="666"/>

                <TextView
                    android:id="@+id/home_items_read_num_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/home_items_read_num"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/home_items_read_num"
                    android:text="@string/items_read_num_text"/>

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
